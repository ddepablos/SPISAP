                @Html.DropDownListFor(m => m.DATOS_DIRECCION.COD_MUNICIPIO_SSO, new SelectList(Model.MunicipioSSO, "COD_MUNICIPIO", "DES_MUNICIPIO", Model.MunicipioSSO), new { @class = "form-control", @id="municipiosso" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                Parroquia :
                @Html.DropDownListFor(m => m.DATOS_DIRECCION.COD_PARROQUIA_SSO, new SelectList(Model.ParroquiaSSO, "COD_PARROQUIA", "DES_PARROQUIA", Model.ParroquiaSSO), new { @class = "form-control", @id="parroquiasso" })
                </div>
                <div class="col-md-4">
                Teléfono de Habitación :
                @Html.TextBoxFor(model => model.DATOS_DIRECCION.TELEFONOS, new { @class = "form-control" })
                </div>
                <div class="col-md-4">
                Teléfono Celular :
                @Html.TextBoxFor(model => model.COD_CLASE_CELULAR, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <!-- // DIRECCIÓN DEL TRABAJADOR -->

        <br>

        <!-- DISCAPACIDAD -->
        <div class="row">
            <div class="title green">DISCAPACIDAD</div>
            <div class="row">
                <br>
                <div class="col-md-3"></div>
                <div class="col-md-2">
                Motriz :
                @Html.CheckBoxFor(model => model.COD_DISCAPACIDAD_MOTRIZ, new { @checked = "checked"})
