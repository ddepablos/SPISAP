              <div class="col-md-2">
                País :
                @Html.DropDownListFor(m => m.DATOS_FORMACION.COD_PAIS, new SelectList(Model.Paises, "COD_PAIS", "DES_PAIS", Model.Paises), new { @class = "form-control", @id="pais" })
