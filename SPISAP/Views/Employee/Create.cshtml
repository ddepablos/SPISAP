            <div class="row">
                <br>
                <div class="col-md-3">
                Primer Apellido :
                @Html.TextBoxFor(model => model.DATOS_PERSONALES.PRIMER_APELLIDO, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                Segundo Apellido :
                @Html.TextBoxFor(model => model.DATOS_PERSONALES.SEGUNDO_APELLIDO, new { @class = "form-control" })
