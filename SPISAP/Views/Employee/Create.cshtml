            </td>
            <td data-name="lugarnac">
                <input type="text" name='lugarnac0' class="form-control"/>
            </td>
            <td data-name="pais">
                @Html.DropDownListFor(m => m.DATOS_FAMILIARES.COD_PAIS, new SelectList(Model.Paises, "COD_PAIS", "DES_PAIS", Model.Paises), new { @class = "form-control" })
            </td>
            <td data-name="nacionalidad">
                @Html.DropDownListFor(m => m.DATOS_FAMILIARES.COD_NACIONALIDAD, new SelectList(Model.Nacionalidades, "COD_NACIONALIDAD", "DES_NACIONALIDAD", Model.Nacionalidades), new { @class = "form-control" })
