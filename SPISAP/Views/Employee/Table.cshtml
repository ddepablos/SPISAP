@model List<SPISAP.Models.DPERSONALES>

@{
    ViewBag.Title = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
.table > thead > td > th , .table > tbody > td > th {
    text-align:center;
    padding-left: 15px;
    padding-right: 15px;    
}
</style>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Gestión de Registros de Trabajadores</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <a class="navbar-brand navbar-right">Usuario : @Session["USUARIO"].ToString() </a>
        </div>
      </div>
    </nav>

    <br><br>

<div class="row">

    <br>
    <br>
    <br>

    <div class="container panel panel-default">

    <div class="panel-heading clearfix panel-gradient">
    <h3 class="panel-title">Listado de Trabajadores</h3>
    </div>

    <div class="panel-body">

    <table class="table table-hover" id="tablerow">
    <thead>
        <tr>
        <th class="text-center">#</th>
        <th class="text-center">Ficha</th>
        <th class="text-center">Cédula</th>
        <th class="text-center">Primer Apellido</th>
        <th class="text-center">Segundo Apellido</th>
        <th class="text-center">Nombres</th>
        <th class="text-center">Usuario (Agregado por)</th>
        <th class="text-center">Fecha / Hora</th>
        <th class="text-center">Usuario (Actualizado por)</th>
        <th class="text-center">Fecha / Hora</th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        @{ long i = 0; }
        @foreach (var item in Model)
        {
        <tr>
        <td>
        @Html.Raw(++i)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.FICHA)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.CEDULA)
        </td>
        <td>
        @Html.DisplayFor(modelItem => item.PRIMER_APELLIDO)
        </td>             
        <td>
        @Html.DisplayFor(modelItem => item.SEGUNDO_APELLIDO)
        </td>             
        <td>
        @Html.DisplayFor(modelItem => item.NOMBRE)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.COD_USER_INS)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.FECHA_INS)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.COD_USER_UPD)
        </td>
        <td class="text-center">
        @Html.DisplayFor(modelItem => item.FECHA_UPD)
        </td>
        <td  class="text-center">  
        @Html.ActionLink("Editar", "Edit", new { id = item.CEDULA })
        </td>
        </tr>             
        }
    </tbody>
    </table>  

    </div>

    <br>

    </div>

    <!-- BUTTONS -->
    <div class="form-group">
        <div class="col-md-offset-4 col-md-2">
            <a class="btn  btn-success btn-md" href="@Url.Action("Create","Employee")">Agregar Nuevo Trabajador</a>
        </div>
        <div class="col-md-2">
            <a class="btn  btn-danger btn-md" href="@Url.Action("Filter","Employee")">Regresar</a>
        </div>
    </div>
    <!--// BUTTONS //-->

</div>
