@*//@Html.Partial("_ValidationSummary")*@

@using (Html.BeginForm())
{ 
    //@Html.AntiForgeryToken()
    //@Html.ValidationSummary(true)

    <div class="container jumbotron form-signin">
    
    <form class="form-horizontal">

    <div class="row">

    <br>

    <div class="row text-center">
        <div class="col-md-offset-4 col-md-4">
            <button type="submit" class="btn btn-primary">Guardar Registro del Trabajador</button>
        </div>
    </div>

    <br>

        <!-- DATOS PERSONALES -->
        <div class="title green">DATOS PERSONALES</div>
    
        <div class="row">
            <br>
            <div class="col-md-3">
            Primer Apellido :
            @Html.TextBoxFor(model => model.PRIMER_APELLIDO, new { @class = "form-control", id = "primerapellido", @maxlength="40" })
            </div>
            <div class="col-md-3">
            Segundo Apellido :
            @Html.TextBoxFor(model => model.SEGUNDO_APELLIDO, new { @class = "form-control", @maxlength="40" })
            </div>
            <div class="col-md-3">
            Nombres :
            @Html.TextBoxFor(model => model.NOMBRE, new { @class = "form-control", @maxlength="40" })
            </div>
            <div class="col-md-2">
            Cédula :
            @Html.TextBoxFor(model => model.CEDULA, new { @class = "form-control", @maxlength="10" , @style="text-align:center"})
            </div>
            <div class="col-md-1">
            Sexo :
            @*@Html.DropDownListFor(model => model.SEXO, new SelectList(Model.Generos, "CODIGO", "DESCRIPCION", Model.Generos), new { @class = "form-control", id = "sexo" })*@
            </div>
        </div>

            
    
        </div>    

    </form>

    </div>
    
}